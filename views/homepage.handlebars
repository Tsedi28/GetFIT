{{!-- Profile Card --}}
<div class="waterContainer">
  <!-- WATER INTAKE -->
  <div class="col card">
    <div class="col col-lg-2">  
      <div class="card" style="width: 30rem;">
        <div class="card-body">
          <h2>Drink Water</h2> 
          <h3>Goal: 2 Liters</h3> 
            <div class="cup">
          <!-- Remained container -->
              <div class="remained" id="remained">
                <span id="liters"></span>
                <small>Remained</small>
              </div>
            <!-- Area for percentage drank -->
              <div class="percentage" id="percentage"></div>
            </div> 
            <p class="text">Click on each glass as you complete your 8 ounce intake</p>
            <!-- Each individual Cup -->
            <div class="cups">
      <!-- Add class of full to 1 or 2 cups, until JS finished -->
            <div class="cup cup-small">1 CUP</div>
            <div class="cup cup-small">1 CUP</div>
            <div class="cup cup-small">1 CUP</div>
            <div class="cup cup-small">1 CUP</div>
            <div class="cup cup-small">1 CUP</div>
            <div class="cup cup-small">1 CUP</div>
            <div class="cup cup-small">1 CUP</div>
            <div class="cup cup-small">1 CUP</div>
           </div>
        </div>
      </div>
    </div> 
  </div>

  


<style>
html {
  --border-color: #144fc6;
  --fill-color: #6ab3f8;
}
* {
  box-sizing: border-box;
}
body {
  background-color: #24504c;
  /* text color white */
  color: #fff;
  font-family: 'Montserrat', sans-serif;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* only setting margin-bottom */
  margin-bottom: 10px;
}
.waterContainer{
  text-align: center;
}
h1 {
  margin: 10px 0 0;
}
/* Goal area h3 */
h3 {
  font-weight: 400;
  margin: 10px 0;
}
/* Cup class includes large cup at top and 8 smaller cups */
.cup {
  background-color: #fff;
  /* Using custom properties for cup color effects */
  border: 4px solid var(--border-color);
  color: var(--border-color);
  border-radius: 0 0 40px 40px;
  height: 230px;
  width: 150px;
  align-items: center;
  margin: 30px 0;
  /* display: flex; */
  flex-direction: column;
  /* Prevents contents overflowing container */
  overflow: hidden;
}
/* INDIVIDUAL SMALL CUPS, smaller height, width */
.cup.cup-small {
  height: 95px;
  width: 50px;
  border-radius: 0 0 15px 15px;
  background-color: rgba(255, 255, 255, 0.9);
  cursor: pointer;
  font-size: 14px;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin: 5px;
  /* Add transition effect for cup filling up */
  transition: 0.3s ease;
}
/* FOR FULL CUPS, CHANGE FILL COLOR FROM EMPTY */
.cup.cup-small.full {
  background-color: var(--fill-color);
  color: #fff;
}
/* CUPS CLASS THAT WRAPS THE SMALL CUPS AREA; SET TO FLEX TO KEEP IN A ROW */
.cups {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  width: 280px;
}
/* REMAINING CUPS */
.remained {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  flex: 1;
  transition: 0.3s ease;
}
/* REMAINING CUPS SPAN */
.remained span {
  font-size: 20px;
  font-weight: bold;
}
.remained small {
  font-size: 12px;
}
/* PERCENTAGE AREA--FILLS LARGE CUP TO VISUALLY SHOW HOW MUCH WATER CONSUMED/REMAINING */
.percentage {
  background-color: var(--fill-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 30px;
  height: 0;
  transition: 0.3s ease;
}
.text {
  text-align: center;
  margin: 0 0 5px;
} 
</style>       
</div>
</div>
  
